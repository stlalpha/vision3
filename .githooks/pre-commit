#!/bin/bash
#
# Pre-commit hook to verify Go code builds successfully
# Prevents commits with compilation errors

set -e

echo "üîç Running pre-commit checks..."

# Check if this is a Go project
if [ ! -f "go.mod" ]; then
    echo "‚úÖ Not a Go project, skipping build check"
    exit 0
fi

# Run go build to verify compilation
echo "üî® Building Go packages..."
if go build ./... 2>&1; then
    echo "‚úÖ Build successful"
else
    echo ""
    echo "‚ùå Build failed! Please fix compilation errors before committing."
    echo ""
    echo "Tip: Run 'go build ./...' to see detailed errors"
    exit 1
fi

# Optional: Run gofmt check
echo "üé® Checking code formatting..."
UNFORMATTED=$(gofmt -l . 2>&1 | grep -v "^vendor/" | grep -v "^vision-2-bbs/" || true)
if [ -n "$UNFORMATTED" ]; then
    echo "‚ö†Ô∏è  Warning: The following files are not formatted:"
    echo "$UNFORMATTED"
    echo ""
    echo "Run 'gofmt -w .' to format all files"
    echo ""
    echo "Continuing with commit (formatting is a warning, not an error)..."
fi

echo "‚úÖ All pre-commit checks passed!"
exit 0
